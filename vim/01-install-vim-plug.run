#!/usr/bin/env bash
set -euf -o pipefail 
CWD="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

if [ -f "${HOME}/.vim/autoload/plug.vim" ]
then
  exit 0
fi

echo "Installing vim-plug"

mkdir -p "${HOME}/.vim/autoload"
cp "${CWD}/plug.vim" "${HOME}/.vim/autoload/plug.vim"

vim +PlugInstall +q +q
